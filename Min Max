#include <iostream>
#include <conio.h>
using namespace std;
void min_max(int arr[], int n)
{
int i, max, min, p1, p2;
if (n % 2 == 1)
{
min = max = arr[0];
p1 = p2 = 0;
for (i = 1; i < n - 1; i += 2)
{
if (arr[i] > arr[i + 1])
{
if (arr[i] > max)
{
max = arr[i];
p1 = i;
}
if (arr[i + 1] < min)
{
min = arr[i + 1];
p2 = i + 1;
}
}
{
if (arr[i] > arr[i + 1])
{
if (arr[i] > max)
{
max = arr[i];
p1 = i;
}
if (arr[i + 1] < min)
{
min = arr[i + 1];
p2 = i + 1;
}
}
else
{
if (arr[i + 1] > max)
{
max = arr[i + 1];
p1 = i + 1;
}
if (arr[i] < min)
{
min = arr[i];
p2 = i;
}
}
}
}
cout << "Maximum: " << max << " at index " << p1 << endl;
cout << "Minimum: " << min << " at index " << p2 << endl;
}
int main()
{
int n;
cout << "Enter the number of elements: ";
cin >> n;
int arr[n];
cout << "Enter the elements: ";
for (int i = 0; i < n; i++)
{
cin >> arr[i];
}
min_max(arr, n);
return 0;
} 
